# Environment variables for microservices
# Copy this to .env and fill in your actual values

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Service URLs for local development
AUTH_SERVICE_URL=http://localhost:8001
HISTORY_SERVICE_URL=http://localhost:8002
ELI5_SERVICE_URL=http://localhost:8000

# Service URLs for Docker Compose deployment
# AUTH_SERVICE_URL=http://auth-service:8000
# HISTORY_SERVICE_URL=http://history-service:8000
# ELI5_SERVICE_URL=http://eli5-service:8000

# Authentication Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# For local development (relative paths)
# DATABASE_URL=sqlite:///./auth.db
# DATABASE_URL=sqlite:///./history.db

# For Docker deployment (absolute paths)
# DATABASE_URL=sqlite:////app/data/auth.db
# DATABASE_URL=sqlite:////app/data/history.db

# HTTP Client Configuration
HTTP_TIMEOUT=30.0
HTTP_MAX_RETRIES=3

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AUTH_URL=http://localhost:8001
NEXT_PUBLIC_HISTORY_URL=http://localhost:8002
